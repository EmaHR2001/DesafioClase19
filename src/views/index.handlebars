<div>
    <div class="welcome">
        {{#if firstName}}
            <h1>Bienvenido {{ firstName }}</h1>
        {{else}}
            <h1>Sesi√≥n no iniciada.</h1>
        {{/if}}
    </div>
    <h2 class="text-center mt-4">Lista de Productos</h2>
    <section class="p-5">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Code</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Thumbnails</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.thumbnails}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
</div>